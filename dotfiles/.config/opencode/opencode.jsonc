{
  "$schema": "https://opencode.ai/config.json",
  "theme": "cobalt2", // cobalt2 zenburn // kanagawa synthwave84 monokai opencode
  "tui": {
    "scroll_speed": 2,
  },
  "keybinds": {
    "leader": "ctrl+x",
    // "input_submit": "shift+enter,ctrl+enter",
    // "input_newline": "enter,ctrl+j",
    // "input_clear": "ctrl+c",
    // "messages_page_up": "pgup,alt+s",
    // "messages_page_down": "pgdown,alt+f",
    // "messages_half_page_up": "ctrl+alt+u,alt+e",
    // "messages_half_page_down": "ctrl+alt+d,alt+d",
  },
  "autoupdate": true,
  "disabled_providers": ["openai"],
  "provider": {
    "aichat": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "aichat",
      "options": {
        "baseURL": "http://localhost:8000/v1",
      },
      "models": {
        "default": {
          "name": "default",
          "reasoning": true,
        },
        "cherryin:x-ai/grok-code-fast-1": {
          "name": "grok-code-fast-1",
        },
      },
    },
    "cherry-studio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Cherry Studio",
      "options": {
        "baseURL": "http://localhost:23333/v1",
      },
      "models": {
        "ppio:qwen/qwen3-30b-a3b-fp8": {
          "name": "qwen3-30b",
        },
      },
    },
  },
  "instructions": [
    "AGENTS.md",
    "openspec/*.md",
    // "CLAUDE.md", "CLAUDE.local.md",
    // ".cursor/rules/*.md", ".cursorrules",
    // ".windsurf/rules/*.md", "global_rules.md",
    // ".kilocode/rules/*.md", ".kilocode/rules/memory-bank/*.md",
    // "QWEN.md", ".qwen/PROJECT_SUMMARY.md",
    // "GEMINI.md",
    // "CRUSH.md", "CRUSH.local.md",
    // ".augment/rules/*.md",
    // ".github/copilot-instructions.md",
    // ".clinerules/*.md",
    // ".qoder/rules/*.md",
    // ".trae/rules/*.md",
    // ".voidrules",
    // "CODE_OF_CONDUCT.md",
    // "CONTRIBUTING.md",
  ],
  "plugin": [],
  "agent": {},
  "command": {},
  "mcp": {},
  "tools": {
    "arxiv_*": true,
    "context7_*": true,
    "content-extractor_*": true,
    "content_extractor_*": true,
    "deepwiki_*": true,
    "bash": true,
    "edit": true,
    "grep": true,
    "glob": true,
    "list": true,
    "patch": true,
    "read": true,
    "todoread": true,
    "todowrite": true,
    "webfetch": true,
    "write": true,
  },
  "permission": {
    "webfetch": "allow",
    "edit": "allow",
    "bash": {
      // deny
      "rm -rf *": "deny",
      "pip *": "deny",
      // ask push
      "git push*": "ask",
      "jj git push*": "ask",
      "xmake push*": "ask",
      "make push*": "ask",
      "task push*": "ask",
      "just push*": "ask",
      "xmake publish*": "ask",
      "make publish*": "ask",
      "task publish*": "ask",
      "just publish*": "ask",
      "xmake release*": "ask",
      "make release*": "ask",
      "task release*": "ask",
      "just release*": "ask",
      "uv push*": "ask",
      "poetry push*": "ask",
      "uv run push*": "ask",
      "uv run release*": "ask",
      "poetry run push*": "ask",
      "poetry run release*": "ask",
      "npm publish*": "ask",
      "pnpm publish*": "ask",
      "bun publish*": "ask",
      "yarn publish*": "ask",
      "* run push*": "ask",
      "* run publish*": "ask",
      "* run release*": "ask",
      "* run upload*": "ask",
      "*push*": "ask",
      "*publish*": "ask",
      "*release*": "ask",
      "*upload*": "ask",
      // allow
      "file *": "allow",
      "ls": "allow",
      "ls *": "allow",
      "mkdir *": "allow",
      "pwd": "allow",
      "touch *": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git status*": "allow",
      "jj describe *": "allow",
      "jj diff *": "allow",
      "jj help*": "allow",
      "jj log*": "allow",
      "jj show*": "allow",
      "jj status*": "allow",
      "openspec *": "allow",
      "openskills *": "allow",
      "npx openskills *": "allow",
      "bunx openskills *": "allow",
      "pnpm dlx openskills *": "allow",
      "gf *": "allow",
      "ent *": "allow",
      "go fmt*": "allow",
      "gofmt": "allow",
      "gofmt *": "allow",
      "ruff": "allow",
      "ruff *": "allow",
      "biome": "allow",
      "biome *": "allow",
      "prettier": "allow",
      "prettier *": "allow",
      "eslint": "allow",
      "eslint *": "allow",
      "tsc": "allow",
      "tsc *": "allow",
      "vite": "allow",
      "vite *": "allow",
      "esbuild": "allow",
      "esbuild *": "allow",
      "xmake *": "allow",
      "cmake *": "allow",
      "make *": "allow",
      "task *": "allow",
      "just *": "allow",
      "uv *": "allow",
      "poetry *": "allow",
      "pnpm *": "allow",
      "bun *": "allow",
      "deno *": "allow",
      "yarn *": "allow",
      "npm *": "allow",
      // deny
      "python -m pip *": "deny",
      "python3 -m pip *": "deny",
      "pipx *": "deny",
      // ask
      "del *": "ask",
      "rm *": "ask",
      "uvx *": "ask",
      "uv tool run *": "ask",
      "bunx *": "ask",
      "bun x *": "ask",
      "pnpm dlx *": "ask",
      "npx *": "ask",
      "*": "ask",
    },
  },
}
